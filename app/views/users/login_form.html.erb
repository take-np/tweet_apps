<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <%= form_tag("/login") do%>
      <div class="form users-form">
        <div class="form-body">
          <p>メールアドレス</p>
          <input name="email">
          <p>パスワード</p>
          <!-- 以下のinputタグにtype属性を指定してください -->
          <input type="password" name="password">
          <input type="submit" value="ログイン">
        </div>
      </div>
    <% end %>
  </div>
</div>
