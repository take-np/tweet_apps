<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <%= form_tag("/login") do%>
      <div class="form users-form">
        <div class="form-body">
          <!--  エラーメッセージの表示。user_controllerのloginにて定義している-->
          <% if @error_message %>
            <div class="form-error">
            <%= @error_message %>
            </div>
          <% end %>

          <p>メールアドレス</p>
          <input name="email" value="<%= @email %>" >
          <!--  フォームに入力した値を初期値として受け取るために、@email、@password-->
          <p>パスワード</p>
          <input type="password" name="password" value = "<%= @password %>">
          <input type="submit" value="ログイン">
        </div>
      </div>
    <% end %>
  </div>
</div>
