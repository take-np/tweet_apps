<div class="main users-edit">
  <div class="container">
    <div class="form-heading">ユーザー情報の編集</div>

    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
      <%= message %>
      </div>
    <% end %>

    <%= form_tag("/users/#{@user.id}/update") do %>
      <div class="form users-form">
        <div class="form-body">
          <p>ユーザー名</p>
          <!-- nameを初期値として表示してください -->
          <input name="name" value="<%= @user.name %>" >
          <p>メールアドレス</p>
          <!-- emailを初期値として表示してください -->
          <input name="email" value="<%= @user.email %>">
          <p>プロフィール画像</p>
          <input type="file" name="image" value="<%= @user.image_name%>">
          <!-- プロフィール画像も変更時にデフォルトの画像を表示したい。ここで示すべきではない？ -->
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>
